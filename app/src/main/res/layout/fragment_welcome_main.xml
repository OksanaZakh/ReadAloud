<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MainBackgroundStyle"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.administrator.readaloud.WelcomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/WelcomeFragment_avaImgButton"
            style="@style/WelcomeFragAvaDimens"
            android:src="@drawable/ic_account_circle_black_24px" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <EditText
            android:id="@+id/WelcomeFragment_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerHorizontal="true"
            android:ems="10"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal"
            android:hint="@string/welcome_fragment_editText_user_name"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/WelcomeFragment_goToReadSectionButton"
            style="@style/MainButtonDimens"
            android:layout_below="@+id/WelcomeFragment_userName"
            android:layout_centerHorizontal="true"
            android:text="@string/general_start_reading" />

    </RelativeLayout>

</LinearLayout>
