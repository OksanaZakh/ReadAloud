<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".app.ui.welcome.WelcomeFragment">

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3" />

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow>

            <ImageButton
                android:id="@+id/WelcomeFragment_avaImgButton"
                style="@style/WelcomeFragAvaDimens"
                android:src="@drawable/ic_account_circle_black_24px" />
        </TableRow>

        <TableRow>

            <EditText
                android:id="@+id/WelcomeFragment_userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="false"
                android:layout_centerHorizontal="true"
                android:ems="10"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal"
                android:hint="@string/welcome_fragment_editText_user_name"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/WelcomeFragment_goToReadSectionButton"
                style="@style/MainButtonDimens"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/WelcomeFragment_userName"
                android:layout_centerHorizontal="true"
                android:text="@string/general_start_reading" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2" />

</LinearLayout>
