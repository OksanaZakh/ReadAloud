<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/MyMainBackgroundStyle"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <SeekBar
        android:id="@+id/timeSeekBar"
        style="@style/MySeekBarDimens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/readingText"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/readingText"
        style="@style/MyReadingTextDimens"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonLinearLayout"
        android:layout_below="@+id/timeSeekBar"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="TextView"
        tools:textEditSideNoPasteWindowLayout="@style/AppTheme" />

    <LinearLayout
        android:id="@+id/buttonLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonStart"
            style="@style/MyMainButtonDimens"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_play_arrow_black_24px" />

        <ImageButton
            android:id="@+id/buttonPause"
            style="@style/MyMainButtonDimens"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_pause_black_24px" />

        <ImageButton
            android:id="@+id/buttonRestart"
            style="@style/MyMainButtonDimens"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_replay_black_24px" />

    </LinearLayout>

</RelativeLayout>
