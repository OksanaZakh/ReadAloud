    android:layout_width="match_parent"
    android:layout_height="@android:dimen/thumbnail_height"
    android:theme="@style/SecondaryBackgroundStyle">

    <ImageView
        android:id="@+id/BaseActivity_Image_Penguin"
        android:layout_width="match_parent"
