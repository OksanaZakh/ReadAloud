<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorButtonNormal">@color/secondaryLightColor</item>
    </style>

    <style name="SecondaryBackgroundStyle" parent="AppTheme">
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="MainBackgroundStyle" parent="AppTheme" />

    <style name="MainToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

</resources>