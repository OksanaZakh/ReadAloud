<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorButtonNormal">@color/secondaryLightColor</item>

    </style>

    <style name="MainBackgroundStyle" parent="AppTheme">
        <item name="android:background">@color/backgroundReadingTextColor</item>
    </style>

    <style name="SecondaryBackgroundStyle" parent="AppTheme">
        <item name="android:background">@color/primaryColor</item>
    </style>

</resources>