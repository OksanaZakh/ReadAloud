<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="layout_padding_top">16dp</dimen>

    <style name="MainReadingTextDimens" parent="AppTheme">
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MainButtonDimens" parent="android:Widget.Material.ImageButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MainSeekBarDimens" parent="AppTheme">
        <item name="android:layout_margin">16dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignStart">@+id/ReadSectionFragment_ReadingTextView</item>
        <item name="android:layout_marginTop">@dimen/layout_padding_top</item>
        <item name="android:max">480</item>
    </style>

    <style name="CancelButtonInDialogFragmentDimens" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">false</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerInParent">false</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="DialogFragmGridViewDimens" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/WelcomeUserAvatarDialogFragment_cancelButton</item>
        <item name="android:layout_alignParentStart">false</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignTop">@+id/WelcomeUserAvatarDialogFragment_cancelButton
        </item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:numColumns">3</item>
    </style>

    <style name="WelcomeFragAvaDimens" parent="Base.Widget.AppCompat.Button">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>


    <style name="SettingsRadioButtonDimens" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SettingsRadioGroupDimens" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsTextViewDimens" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MainNavigationDrawerDimens" parent="MainBackgroundStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="TextInNavigationHeaderDimens" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">11dp</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="InfoImageButtonDimens" parent="AppTheme">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:adjustViewBounds">false</item>
        <item name="android:elevation">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:background">@color/primaryColor</item>

    </style>

</resources>