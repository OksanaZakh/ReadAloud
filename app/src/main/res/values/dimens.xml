<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="text_padding">4dp</dimen>
    <dimen name="text_padding_half">2dp</dimen>
    <dimen name="text_padding_double_half">6dp</dimen>
    <dimen name="text_padding_double">8dp</dimen>
    <dimen name="text_padding_big">16dp</dimen>
    <dimen name="layout_padding">50dp</dimen>
    <dimen name="layout_padding_top">16dp</dimen>
    <dimen name="image_padding">6dp</dimen>

    <dimen name="Dialog_WidthDefault">320dp</dimen>
    <dimen name="Dialog_SpacingHorizontal">16dp</dimen>
    <dimen name="Dialog_SpacingVertical">16dp</dimen>
    <dimen name="Dialog_SpacingVerticalSmall">8dp</dimen>
    <dimen name="Dialog_SpacingVerticalMicro">4dp</dimen>
    <dimen name="Dialog_SpacingVerticalDouble">32dp</dimen>

    <dimen name="ListItem_Spasing_Normal">4dp</dimen>

    <dimen name="ButtonIcon_SpacingHorizontal">16dp</dimen>
    <dimen name="ButtonIcon_SpacingVertical">8dp</dimen>


    <style name="MainReadingTextDimens" parent="AppTheme">
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="MainButtonDimens" parent="android:Widget.Material.ImageButton">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MainSeekBarDimens" parent="AppTheme">
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="CancelButtonInDialogFragmentDimens" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">false</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerInParent">false</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="DialogFragmGridViewDimens" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_above">@+id/WelcomeUserAvatarDialogFragment_cancelButton</item>
        <item name="android:layout_alignParentStart">false</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignTop">@+id/WelcomeUserAvatarDialogFragment_cancelButton
        </item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:numColumns">3</item>
    </style>

    <style name="WelcomeFragAvaDimens" parent="AppTheme">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:foregroundGravity">center</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>